{
  "version": 2,
  "builds": [
    {
      "src": "ecommerce/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "build.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ecommerce/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "ecommerce.settings"
  },
  "regions": ["iad1"]
}